<%- include('./partials/header.ejs') %>

<body>
    <%- include('./partials/nav.ejs')  %> 
    <div class="blogs content">
    <h2>All Blogs :</h2>
    <% if(blogs.length > 0){ %> 
        <% blogs.forEach(blog =>{ %> 
            <a href="/blogs/<%= blog._id %> " class="single">
            <h3 ><%= blog.title %> </h1>
            <p ><%= blog.snippet %> </p>
            </a>
        <% }); %> 
        
    <% }else{ %> 
        <p>No Blogs </p>
    <% } %> 
    </div> 
 <%- include('./partials/script.ejs')  %> 
</body>

</html>